// Name these taks the way you want
// Configure command in make to use desired amount of threads (now 4)
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "-j4"
            ]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ]
        },
        {
            "label": "JFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4",
                "jflash"
            ]
        },
        {
            "label": "STflash",
            "group": "build",
            "type": "shell",
            "command": "make"
        },
        {
            "label": "UARTFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4",
                "uflash",
                "PORT=/dev/ttyUSB1"
            ]
        },
        {
            "label": "Build STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.build}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Clean STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.cleanBuild}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.flash}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}